
ACTION!="add", GOTO="managarm_vga_end"
SUBSYSTEM!="pci", GOTO="managarm_vga_end"

IMPORT{cmdline}="plainfb.force"
ENV{plainfb.force}=="1", GOTO="managarm_vga_forceplain"

ATTR{vendor}=="0x1234", ATTR{device}=="0x1111", RUN+="/usr/bin/runsvr --fork run /usr/lib/managarm/server/gfx-bochs.bin", GOTO="managarm_vga_end"
ATTR{vendor}=="0x1af4", ATTR{device}=="0x1050", RUN+="/usr/bin/runsvr --fork bind /usr/lib/managarm/server/gfx-virtio.bin", GOTO="managarm_vga_end"
ATTR{vendor}=="0x15ad", ATTR{device}=="0x0405", RUN+="/usr/bin/runsvr --fork bind /usr/lib/managarm/server/gfx-vmware.bin", GOTO="managarm_vga_end"

ATTR{vendor}=="0x8086", ATTR{device}=="0x0166", RUN+="/usr/bin/runsvr --fork bind /usr/lib/managarm/server/gfx-intel-lil.bin", GOTO="managarm_vga_end"
ATTR{vendor}=="0x8086", ATTR{device}=="0x3184", RUN+="/usr/bin/runsvr --fork bind /usr/lib/managarm/server/gfx-intel-lil.bin", GOTO="managarm_vga_end"
ATTR{vendor}=="0x8086", ATTR{device}=="0x3185", RUN+="/usr/bin/runsvr --fork bind /usr/lib/managarm/server/gfx-intel-lil.bin", GOTO="managarm_vga_end"
ATTR{vendor}=="0x8086", ATTR{device}=="0x3E9B", RUN+="/usr/bin/runsvr --fork bind /usr/lib/managarm/server/gfx-intel-lil.bin", GOTO="managarm_vga_end"
ATTR{vendor}=="0x8086", ATTR{device}=="0x5916", RUN+="/usr/bin/runsvr --fork bind /usr/lib/managarm/server/gfx-intel-lil.bin", GOTO="managarm_vga_end"
ATTR{vendor}=="0x8086", ATTR{device}=="0x5917", RUN+="/usr/bin/runsvr --fork bind /usr/lib/managarm/server/gfx-intel-lil.bin", GOTO="managarm_vga_end"

LABEL="managarm_vga_forceplain"
ATTR{owns_plainfb}!="1", GOTO="managarm_vga_end"
RUN += "/usr/bin/runsvr run /usr/lib/managarm/server/gfx-plainfb.bin"

LABEL="managarm_vga_end"
